{
    "name": "tuupola/base32",
    "description": "Base32 encoder and decoder for arbitrary data",
    "keywords": [
        "base32"
    ],
    "homepage": "https://github.com/tuupola/base32",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Tuupola",
            "email": "tuupola@appelsiini.net",
            "homepage": "https://appelsiini.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^5.6 || ^7.0"
    },
    "suggest": {
        "ext-gmp": "GMP extension provides the fastest encoding and decoding."
    },
    "autoload": {
        "psr-4": {
            "Tuupola\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tuupola\\": "tests"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5",
        "phpunit/phpunit": "^4.8 || ^5.5 || ^6.5",
        "paragonie/random_compat": "^2.0",
        "phpbench/phpbench": "^0.13.0",
        "overtrue/phplint": "^0.2.1"
    }
}
